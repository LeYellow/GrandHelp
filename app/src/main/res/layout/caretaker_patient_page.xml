<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_btn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand"
                android:textColor="#F3796E"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@android:color/white"
                android:textSize="40dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/placeholder_user" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="John Doe" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/live_status"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/live_status"
                        android:background="#B7D8D6" />

                    <TextView
                        android:id="@+id/live_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Live Status" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:layout_marginStart="30dp">

                    <ImageButton
                        android:id="@+id/overall_status"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/overall_status"
                        android:background="#B7D8D6" />

                    <TextView
                        android:id="@+id/overall_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Overall Status" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/location"
                        android:background="#B7D8D6" />

                    <TextView
                        android:id="@+id/location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Location" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:layout_marginStart="30dp">

                    <ImageButton
                        android:id="@+id/patient_settings"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/setting"
                        android:background="#B7D8D6" />

                    <TextView
                        android:id="@+id/patient_settings_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Patient Settings" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/contact_caretaker"
                    android:layout_width="350dp"
                    android:layout_height="160dp"
                    android:src="@drawable/contact"
                    android:background="#B7D8D6" />

                <TextView
                    android:id="@+id/contact_caretaker_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Contact Patient" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>